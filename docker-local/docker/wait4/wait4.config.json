{
  "wait4": "v0.1.0",
  "services":[
    {
      "name": "central-ledger",
      "wait4": [
        {
          "description": "Kafka broker",
          "uri": "kafka:29092",
          "method": "ncat"
        },
        {
          "description": "MySQL ledger",
          "uri": "mysql:3306",
          "method": "mysql",
          "rc": {
            "description": "customized RC setup for method", 
            "namespace": "CLEDG",
            "configPath": "../config/default.json"
          }
        },
        {
          "description": "MongoDB object store",
          "uri": "mongodb://objstore:27017/mlos",
          "method": "mongo"
        }
      ]
    },
    {
      "name": "central-settlement",
      "wait4": [
        {
          "uri": "kafka:29092",
          "method": "ncat"
        },
        {
          "uri": "mysql:3306",
          "method": "mysql"
        }
      ]
    },
    {
      "name": "account-lookup-service",
      "wait4": [
        {
          "description": "central-ledger api server",
          "uri": "central-ledger:3001",
          "method": "ncat",
          "retries": 30,
          "retires_description": "we have to wait much longer for central-ledger to spin up so we overload `retires` default parameter value"
        },
        {
          "description": "MySQL ALS",
          "uri": "mysql-als:3306",
          "method": "ncat",
          "method_description": "example of using ncat instead knex, so we don't have to know db connection parameters"
        }
      ]
    },
    {
      "name": "ml-api-adapter",
      "wait4": [
        {
          "uri": "kafka:29092",
          "method": "ncat"
        }
      ]
    }
  ]
}